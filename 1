        function setLabStage(id) {
            const stage = stages[id];
            document.getElementById('labTitle').innerText = stage.title;
            document.getElementById('labDesc').innerText = stage.desc;
            
            const grid = document.getElementById('labTemplates');
            grid.innerHTML = '';
            stage.templates.forEach(tmp => {
                grid.innerHTML += `
                    <div class="p-6 bg-white/5 border border-white/10 rounded-2xl hover:border-yellow-400/50 transition cursor-default">
                        <h5 class="text-xs font-black text-yellow-400 uppercase mb-2">${tmp.t}</h5>
                        <p class="text-xs text-stone-400 italic">"${tmp.d}"</p>
                    </div>
                `;
            });

            document.querySelectorAll('.lab-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById('btn-' + id).classList.add('active');
        }

