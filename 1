        const vWatch = document.getElementById('vWatch');
        const vShare = document.getElementById('vShare');
        const vReach = document.getElementById('vReach');
        const vBar = document.getElementById('vBar');

        function updateAlgo() {
            const w = parseInt(iWatch.value);
            const s = parseFloat(iShare.value);
            vWatch.innerText = w + 's';
            vShare.innerText = s + '%';

            let views = 0;
            let data = [];
            let color = "#FFD700";

            if (w < 5) {
                views = 250;
                data = [100, 150, 200, 240, 250];
                vReach.innerText = "STAGNATION (250)";
                vBar.style.width = "10%";
            } else if (w < 20 || s < 2) {
                views = 15000;
                data = [100, 1000, 5000, 12000, 15000];
                vReach.innerText = "EXPLORATION (15K)";
                vBar.style.width = "40%";
            } else {
                views = 1200000;
                data = [1000, 50000, 250000, 800000, 1200000];
                vReach.innerText = "VIRALIT√â (1.2M)";
                vBar.style.width = "100%";
            }

            algoLine.data.datasets[0].data = data;
            algoLine.update();
        }

        iWatch.addEventListener('input', updateAlgo);
        iShare.addEventListener('input', updateAlgo);

