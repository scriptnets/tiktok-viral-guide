        function setWeek(w) {
            const content = document.getElementById('weekContent');
            content.innerHTML = '';
            weeks[w].forEach(item => {
                content.innerHTML += `
                    <div class="glass-panel p-8 border-t-2 border-t-yellow-400">
                        <h4 class="text-lg font-black text-white mb-4 italic">${item.d}</h4>
                        <p class="text-xs text-stone-500 leading-relaxed">${item.c}</p>
                    </div>
                `;
            });

            document.querySelectorAll('.week-btn').forEach(btn => {
                btn.classList.remove('bg-yellow-400', 'text-black');
            });
            event.currentTarget.classList.add('bg-yellow-400', 'text-black');
        }

        // ROI Calculator
        function computeROI() {
            const views = parseInt(document.getElementById('calcViews').value);
            const strat = parseFloat(document.getElementById('calcStrategy').value);
            const result = document.getElementById('roiResult');
            
            // Logique : Views * Conv Rate (0.05%) * Basket Moyen (d√©pend de la strat)
            // Digital: 50‚Ç¨ | Affiliate: 30‚Ç¨ | Fund: 0.5‚Ç¨ per 1000
            let basket = 50;
            if (strat < 1) basket = 30;
            if (strat < 0.1) basket = 0.5;

            let money = 0;
            if (strat < 0.1) {
                money = (views / 1000) * basket;
            } else {
                money = (views * 0.0005) * basket * strat;
            }

            result.innerText = new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 }).format(money);
        }

        // Init
        updateAlgo();
        setLabStage('hook');
        setWeek(1);
        computeROI();

    </script>
